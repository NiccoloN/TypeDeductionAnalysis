#include <stdio.h>
#include <time.h>

#include "user.h"
#include "simple_random.h"


#define BENCH_NAME ${BENCH_NAME}
#define BENCH_NAME_STR "${BENCH_NAME}"


extern void BENCH_NAME();
#ifndef WITH_ANSI
extern double result;
#endif
int main() {
    int i;
    printf("HEAP WCET Benchmarks - " BENCH_NAME_STR "n");
    printf("Running with:\n");
#if USE_ITERATIONS_LOOP
    printf("ITERATIONS:\t%d\n", ITERATIONS);
#else
    printf("DISABLED ITERATIONS\n");
#endif
    printf("ARRAY_LENGTH:\t%d\n", ARRAY_LENGTH);
    printf("SEED:\t\t%d\n",SEED);
    printf("********************************************************\n");

    random_set_seed(SEED);
    for(i=0;i<1000;i++){
      BENCH_NAME();
      #ifndef WITH_ANSI
          printf("[" BENCH_NAME_STR "] Execution time: %f ns\n", result);
      #endif
    }
    printf("[" BENCH_NAME_STR "] Completed\n");
    return 0;    
}
